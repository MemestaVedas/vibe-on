{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "VIBE-ON!",
  "version": "0.1.0",
  "identifier": "moe.memesta.vibe-on",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "VIBE-ON!",
        "width": 1000,
        "height": 700,
        "decorations": false,
        "transparent": true,
        "resizable": true,
        "maximizable": true,
        "shadow": true
      }
    ],
    "security": {
      "csp": "default-src 'self' data: blob: asset: http://asset.localhost https://asset.localhost;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}